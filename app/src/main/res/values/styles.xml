<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextviewStyle_Setting">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:alpha">0.6</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:drawableRight">@drawable/d_icon_right_arrow_black</item>
        <item name="android:textColor">@color/black_find</item>
        <item name="android:background">@drawable/terms_background</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">@dimen/textMediumSize</item>
    </style>

    <style name="TextViewHeading">
        <item name="android:fontFamily">@font/gilroy_medium</item>

        <item name="android:textColor">@color/black_find</item>
        <item name="android:textSize">@dimen/labelMediumSize</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="EditTextPassword">
        <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:inputType">textPassword</item>
         <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/black_find</item>
        <item name="android:textColorHint">@color/black_find1</item>
        <item name="android:textSize">@dimen/textMediumSize</item>

    </style>
</resources>