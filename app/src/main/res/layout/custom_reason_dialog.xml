<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@drawable/rounded_white">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reasonTitle"
        android:padding="10dp"
        android:textSize="@dimen/labelMediumSize"
        android:fontFamily="@font/gilroy_medium">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleViewReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        android:layout_below="@+id/textTitle"/>

    <ImageView
        android:id="@+id/imageCancel"
        android:layout_width="@dimen/imageSize"
        android:layout_height="@dimen/imageSize"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/recycleViewReason"
        android:background="@drawable/circle_bg_black_red"
        android:src="@drawable/icon_wrong"
        android:padding="15dp">

    </ImageView>

</RelativeLayout>