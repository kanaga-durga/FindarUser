<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="org.findar.user.Activity.CreateAccountActivity">

    <include layout="@layout/header"
        android:id="@+id/back_arrow">
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/back_arrow">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/RL_Create"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<!--        <ImageView-->
<!--            android:id="@+id/back_arrow"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_margin="30dp"-->
<!--            android:src="@drawable/back_arrow" />-->

        <TextView
            android:id="@+id/txt_phn_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/gilroy_medium"
            android:text="@string/create_an_account"
            android:textColor="@color/black_find"
            android:textSize="@dimen/titleSize" />

        <TextView
            android:id="@+id/txt_signup_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_phn_num"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"

            android:alpha="0.4"
            android:fontFamily="@font/gilroy_medium"
            android:text="@string/create_account_content"
            android:textColor="@color/black_find"
            android:textSize="@dimen/labelSize" />

        <EditText
            android:id="@+id/et_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_signup_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edittext_border"
            android:fontFamily="@font/gilroy_medium"
            android:hint="@string/first_name"
            android:padding="20dp"
            android:textColor="@color/black_find"
            android:textColorHint="@color/black_find1"
            android:textSize="@dimen/editSize" />

        <EditText
            android:id="@+id/et_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_first_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edittext_border"
            android:fontFamily="@font/gilroy_medium"
            android:hint="@string/last_name"
            android:padding="20dp"
            android:textColor="@color/black_find"
            android:textColorHint="@color/black_find1"
            android:textSize="@dimen/editSize" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_last_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edittext_border"
            android:fontFamily="@font/gilroy_medium"
            android:hint="@string/email"
            android:padding="20dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/black_find"
            android:textColorHint="@color/black_find1"
            android:textSize="@dimen/editSize" />

        <EditText
            android:id="@+id/DatePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_email"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_border"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/gilroy_medium"
            android:hint="@string/birthdate"
            android:padding="20dp"
            android:textColor="@color/black_find"
            android:textColorHint="@color/black_find1"
            android:textSize="@dimen/editSize" />

        <ImageView
            android:id="@+id/calender"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/et_email"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="25sp"
            android:layout_marginRight="35dp"
            android:padding="5dp"
            android:src="@drawable/calendar" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DatePicker"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_border"
            android:fontFamily="@font/gilroy_medium"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="@color/black_find"
            android:textColorHint="@color/black_find1"
            android:textSize="@dimen/editSize" />


        <ImageView
            android:id="@+id/eye_icon_p"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_below="@+id/DatePicker"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="30sp"
            android:layout_marginRight="40dp"
            android:background="@drawable/circle_border"
            android:padding="5dp"
            android:src="@drawable/pass_icon" />

        <EditText
            android:id="@+id/et_cpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_password"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_border"
            android:fontFamily="@font/gilroy_medium"
            android:hint="@string/cpassword"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="@color/black_find"
            android:textColorHint="@color/black_find1"
            android:textSize="@dimen/editSize" />

        <ImageView
            android:id="@+id/eye_icon_cp"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_below="@+id/et_password"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="30sp"
            android:layout_marginRight="40dp"
            android:background="@drawable/circle_border"
            android:padding="5dp"
            android:src="@drawable/pass_icon" />


        <TextView
            android:id="@+id/txt_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_cpassword"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/gilroy_bold"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/create"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/buttonsize" />

        <TextView
            android:id="@+id/txt_create_content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_create"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:alpha="0.4"
            android:textAlignment="center"
            android:fontFamily="@font/gilroy_medium"
            android:text="@string/create_account_content1"
            android:textColor="@color/black_find"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_create_content1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/gilroy_bold"
            android:text="@string/login"
            android:textAlignment="center"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/editSize" />

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RL_terms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

<!--            <ImageView-->
<!--                android:id="@+id/back_arrow1"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_margin="30dp"-->
<!--                android:src="@drawable/back_arrow" />-->

            <TextView
                android:id="@+id/txt_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/gilroy_medium"
                android:text="@string/terms_and_condition"
                android:textColor="@color/black_find"
                android:textSize="@dimen/labelLargeSize" />

            <TextView
                android:id="@+id/txt_terms_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_terms"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="70dp"
                android:alpha="0.4"
                android:fontFamily="@font/gilroy_medium"
                android:text="@string/terms_content"
                android:textColor="@color/black_find"
                android:textSize="15dp" />

            <RelativeLayout
                android:id="@+id/RL_terms1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/txt_terms_content"
                android:layout_margin="20dp"
                android:background="@drawable/terms_background"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txt_terms_content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.6"
                    android:fontFamily="@font/gilroy_medium"
                    android:text="@string/terms_content1"
                    android:textColor="@color/black_find"
                    android:lineSpacingExtra="10dp"
                    android:textSize="@dimen/labelSize" />

                <TextView
                    android:id="@+id/txt_terms_content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_terms_content1"
                    android:layout_marginTop="15dp"
                    android:alpha="0.6"
                    android:fontFamily="@font/gilroy_medium"
                    android:text="@string/terms_content2"
                    android:textColor="@color/black_find"
                    android:lineSpacingExtra="10dp"
                    android:textSize="@dimen/labelSize" />

                <TextView
                    android:id="@+id/txt_terms_content3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_terms_content2"
                    android:layout_marginTop="15dp"
                    android:alpha="0.6"
                    android:fontFamily="@font/gilroy_medium"
                    android:text="@string/readmore"
                    android:textColor="@color/primary_color"
                    android:textSize="20dp" />

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>
    </ScrollView>
    <TextView
        android:id="@+id/txt_terms_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/gilroy_bold"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="@string/continue_"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:textSize="@dimen/buttonsize" />
</RelativeLayout>